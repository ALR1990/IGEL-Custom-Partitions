#!/bin/bash
ACTION="WireGuard_status_start_stop_${1}"
# output to systemlog with ID and tag
LOGGER="logger -it ${ACTION}"
echo "Starting" | $LOGGER

if &amp;lb -e /etc/wireguard/wg0.conf &amp;rb; then
  WG_UP=$(wg show | grep handshake | wc -l)
else
  notify-send-message -t 200000 -i /usr/share/icons/IGEL-Basic/categories/64/igel-network.png WireGuard_Status "WireGuard VPN is NOT setup on this system"
  echo "WireGuard VPN is NOT setup on this system" | $LOGGER
  exit 1
fi

case "$1" in
status)
  if &amp;lb $WG_UP = 1 &amp;rb; then
    notify-send-message -t 200000 -i /usr/share/icons/IGEL-Basic/categories/64/igel-network.png WireGuard_Status "WireGuard VPN is On"
  else
    notify-send-message -t 200000 -i /usr/share/icons/IGEL-Basic/categories/64/igel-network.png WireGuard_Status "WireGuard VPN is Off"
  fi
;;
start)
  if &amp;lb $WG_UP = 0 &amp;rb; then
    notify-send-message -t 200000 -i /usr/share/icons/IGEL-Basic/categories/64/igel-network.png WireGuard_Status "Turning WireGuard VPN On"
    wg-quick up wg0 | $LOGGER
  else
    notify-send-message -t 200000 -i /usr/share/icons/IGEL-Basic/categories/64/igel-network.png WireGuard_Status "WireGuard VPN is alreay On"
  fi
;;
stop)
  if &amp;lb $WG_UP = 1 &amp;rb; then
    notify-send-message -t 200000 -i /usr/share/icons/IGEL-Basic/categories/64/igel-network.png WireGuard_Status "Turning WireGuard VPN Off"
    wg-quick down wg0 | $LOGGER
  else
    notify-send-message -t 200000 -i /usr/share/icons/IGEL-Basic/categories/64/igel-network.png WireGuard_Status "WireGuard VPN is alreay Off"
  fi
;;
esac
EOF

chmod 400 /wfs/wireguard/*
