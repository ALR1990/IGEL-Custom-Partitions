#! /bin/bash

ACTION="custompart-edge_apparmor"

# Add apparmor profile to trust in Firefox
logger -it "$ACTION" "Adding Edge to firefox apparmor profile"
echo "$( get custom_partition.mountpoint )/edge/opt/microsoft/msedge/microsoft-edge Uxr," > /etc/apparmor.d/abstractions/ubuntu-browsers.d/edge
echo '#include <abstractions/ubuntu-browsers.d/edge>' >> /etc/apparmor.d/abstractions/ubuntu-browsers.d/firefox

# reload apparmor only if it is enabled
if [ "$( get system.security.apparmor )" = "true" ] ; then
  logger -it "$ACTION" "Reloading apparmor profiles"
  systemctl reload apparmor.service
else
  logger -it "$ACTION" "Apparmor profiles disabled by setup"
fi

exit 0
